{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "flux": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance"
      ],
      "automerge": true
    },
    {
      "matchManagers": ["kustomize"],
      "enabled": false
    },
    {
      "matchManagers": ["helm"],
      "matchUpdateTypes": ["minor"],
      "automerge": false
    }
  ]
}
