{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "packageRules": [
    {
      "matchManagers": ["kustomize"],
      "enabled": false
    }
  ],
  "flux": {
    "fileMatch": ["\\.yaml$"]
  }
}
